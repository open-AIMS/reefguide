{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "**/dist",
        "**/build"
    ]
}
