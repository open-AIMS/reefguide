  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug app in Chrome",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/packages/app"
    },
    {
      "name": "Debug web-api:dev",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/packages/web-api",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
